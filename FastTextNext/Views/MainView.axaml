<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:FastTextNext.ViewModels"                          
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FastTextNext.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Orientation="Horizontal">            
      <Button Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=PlusBold, Text=Новый текст}" Command="{Binding SetNewTextCommand}" Margin="5"/>
      <Button Classes="accent" Content="{materialIcons:MaterialIconTextExt Kind=Remove, Text=Удалить текст}" Margin="5" Command="{Binding RemoveTextCommand}"/>
      <Button Content="{materialIcons:MaterialIconTextExt Kind=PreviousTitle, Text=Пред.текст}" Margin="5" Command="{Binding PrevTextCommand}"/>
      <Button Content="{materialIcons:MaterialIconTextExt Kind=NextTitle, Text=След.текст}" Margin="5" Command="{Binding NextTextCommand}"/>
      <Button Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=ListBox, Text=Список текстов}" Command="{Binding ShowListTextCommand}" Margin="5"/>
      <ToggleButton Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=ListBox, Text=Поверх всех окон}" Command="{Binding SetTopMost}" Margin="5"/>
      <ToggleButton Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=Disc, Text=Перезапись}" 
                    ToolTip.Tip="F5, при сохранении будет перезаписана текущая заметка, а не создана новая. Флаг сбросится после сохранения заметки" 
                    Command="{Binding SetResaveModeCommand}"
                    IsChecked="{Binding IsResaveThisButtonChecked}" Margin="5"/>
      <TextBlock Classes="Headline6" Text="Hello world with Material.Avalonia!" Padding="5" Margin="5"/>          
    </StackPanel>
    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <TextBlock Classes="Headline6" Text="{Binding HeaderText}"/>
    </StackPanel>
    <StackPanel Grid.Row="2" Orientation="Horizontal">      
      <ToggleButton Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=Star}" ToolTip.Tip="Избранный" 
                    Command="{Binding SetFavoriteTextCommand}"
                    IsChecked="{Binding IsFavoriteButtonChecked}"
                    Margin="5"
                    IsEnabled="{Binding IsFavoriteButtonEnabled}">        
      </ToggleButton>
      <ToggleButton Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=CalendarBlankOutline}" ToolTip.Tip="Задача" 
                    Command="{Binding SetTaskTextCommand}"
                    Margin="5"
                    IsChecked="{Binding IsTaskButtonChecked}"
                    IsEnabled="{Binding IsTaskButtonEnabled}"/>
      <ToggleButton Classes="primary" Content="{materialIcons:MaterialIconTextExt Kind=CalendarCheck}" ToolTip.Tip="Задача выполонена" 
                    Command="{Binding SetDoneTaskTextCommand}"
                    Margin="5"
                    IsChecked="{Binding IsDoneTaskButtonChecked}"
                    IsEnabled="{Binding IsDoneTaskButtonEnabled}"/>
     
    </StackPanel>

    <!--TextBox Classes="outline" VerticalContentAlignment="Top" VerticalAlignment="Stretch" Grid.Row="3" Margin="5 15 5 5" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" Text="{Binding TextContent}"/-->
    <TextBox Name="MainText" Classes="filled" VerticalContentAlignment="Bottom" TextAlignment="Start" VerticalAlignment="Stretch" Grid.Row="3" Margin="5 15 5 5" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" Text="{Binding TextContent}"/>

    <StackPanel Grid.Row="4" Orientation="Vertical">
      <TextBlock Text="{Binding LogText}"/>
    </StackPanel>
  </Grid>
</UserControl>
